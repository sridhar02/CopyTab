{
  "name": "Copy Current URL",
  "description": "Copies the current URL with a keyboard shortcut.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },

  "commands": {
    "copy_url": {
      "suggested_key": {
        "default": "Alt+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Copy the URL of the current tab"
    }
  },

  "action": {
    "default_title": "Copy Current URL"
  }
}
